@model IEnumerable<ASP2.Models.Revision>

@{
    ViewBag.Title = "Revision";
}

<h2>Revision</h2>

<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Documento del cliente</th>
            <th>Email del cliente</th>
            <th>Fecha de la compra</th>
            <th>Total de la compra</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.nombreCliente)</td>
            <td>@Html.DisplayFor(modelItem => item.documentoCliente)</td>
            <td>@Html.DisplayFor(modelItem => item.emailCliente)</td>
            <td>@Html.DisplayFor(modelItem => item.fechaCompra)</td>
            <td>@Html.DisplayFor(modelItem => item.totalCompra)</td>
        </tr>
    }
</table>

<p>
    |
    @Html.ActionLink("Imprimir PDF", "imprimirRevision")
</p>

