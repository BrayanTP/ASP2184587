@model IEnumerable<ASP2.Models.compra>

@{
    ViewBag.Title = "Compra";
}

<h2>COMPRA</h2>

<p>
    @Html.ActionLink("Agregar compra", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Fecha
            </th>
            <th>
                Total
            </th>
            <th>
                Usuario
            </th>
            <th>
                Cliente
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @ASP2.Controllers.CompraController.nombreUsuario(item.id_usuario)
            </td>
            <td>
                @ASP2.Controllers.CompraController.nombreCliente(item.id_cliente)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿ Esta seguro de eliminar ?')) {
                event.preventDefault();
            }
        })
    </script>
}
