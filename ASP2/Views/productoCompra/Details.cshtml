@model ASP2.Models.producto_compra

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>Detalles producto compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Total Compra
        </dt>

        <dd>
            @ASP2.Controllers.productoCompraController.totalCompra(Model.id_compra)
        </dd>

        <dt>
            Producto
        </dt>

        <dd>
            @ASP2.Controllers.productoCompraController.nombreProducto(Model.id_producto)
        </dd>

        <dt>
            Cantidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver a la lista", "Index")
</p>
